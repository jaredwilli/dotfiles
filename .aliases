# Git stuff
alias push="git push"
alias pull="git pull"

# Random stuff
alias dropbox="cd ~/Documents/Dropbox"
alias downloads="cd ~/Downloads"
alias desktop="cd ~/Desktop"
alias projects="cd ~/projects"

# List vscode installed extensions
alias vsext="code --list-extensions"
alias vs="code ."

